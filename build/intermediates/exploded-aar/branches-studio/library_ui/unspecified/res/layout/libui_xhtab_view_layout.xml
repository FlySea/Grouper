<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xhtab_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/tab1"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:background="@drawable/libui_tab_left_select"
        android:gravity="center"
        android:textColor="@color/libui_white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/tab2"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:background="@drawable/libui_tab_right_default"
        android:gravity="center"
        android:textColor="@color/libui_text_light"
        android:textSize="14dp" />

</LinearLayout>